{
    "private": true,
    "license": "BSD-3-Clause",
    "workspaces": {
        "packages": [
            "examples/**",
            "packages/**"
        ]
    },
    "scripts": {
        "build": "pnpm --filter @tree-finder/base build",
        "clean": "pnpm --filter @tree-finder/base clean",
        "integrity": "pnpm install && pnpm dedupe && pnpm install",
        "lint:base": "pnpm --filter @tree-finder/base lint",
        "lint:top": "prettier --check \"*.js\" \"*.json\"",
        "lint": "npm-run-all lint:*",
        "fix:base": "pnpm --filter @tree-finder/base fix",
        "fix:top": "prettier --write  \"*.js\" \"*.json\"",
        "fix": "npm-run-all fix:*",
        "start:simple": "pnpm --filter simple start",
        "start": "http-server -p 4000 -o examples",
        "test": "pnpm --filter @tree-finder/base test",
        "webpack:dev:base": "pnpm --filter @tree-finder/base webpack",
        "webpack": "npm-run-all webpack:dev:*",
        "webpack:prod:base": "pnpm --filter @tree-finder/base webpack:prod",
        "webpack:prod": "npm-run-all webpack:prod:*"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "@types/jest": "^30.0.0",
        "@types/react": "^19.2.7",
        "css-loader": "^7.1.2",
        "css-minimizer-webpack-plugin": "^7.0.2",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.6.5",
        "http-server": "^14.1.1",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "jest-junit": "^16.0.0",
        "lerna": "^9.0.1",
        "less": "^4.4.2",
        "less-loader": "~12.3.0",
        "mini-css-extract-plugin": "^2.9.4",
        "npm-run-all": "^4.1.5",
        "playwright": "^1.57.0",
        "postcss-loader": "^8.2.0",
        "prettier": "^3.6.2",
        "rimraf": "^6.1.2",
        "shx": "^0.4.0",
        "source-map-loader": "^5.0.0",
        "style-loader": "^4.0.0",
        "svg-url-loader": "^8.0.0",
        "svgo": "^4.0.0",
        "ts-jest": "^29.4.5",
        "ts-loader": "^9.5.4",
        "tsconfig-paths-webpack-plugin": "^4.2.0",
        "typescript": "^5.9.3",
        "webpack": "^5.103.0",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2",
        "webpack-remove-empty-scripts": "^1.1.1"
    }
}
